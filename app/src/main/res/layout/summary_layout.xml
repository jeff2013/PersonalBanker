<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/textView_Category"
        android:layout_marginBottom="14dp"
        android:layout_alignBottom="@+id/summaryRV_icon"
        android:layout_toEndOf="@+id/summaryRV_icon"
        android:layout_marginLeft="10dp" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/summaryRV_icon"
        android:background="@drawable/f"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Light.Widget.PopupMenu.Small"
        android:text="Small Text"
        android:textSize="20sp"
        android:id="@+id/textView_percentage"
        android:layout_alignBottom="@+id/textView_Category"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="2dp"
        android:textStyle="bold"
        android:layout_marginRight="10dp" />
</RelativeLayout>