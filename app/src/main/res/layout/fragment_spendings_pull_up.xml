<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:background= "@color/white" android:orientation="vertical" tools:context="Fragments.SpendingsPullUp">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background = "#00933B"
        android:id="@+id/peekView">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/textView_AmountSpent"
            android:textSize = "40sp"
            android:textColor="@color/white"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:layout_centerInParent="true"
        android:indeterminate="false"
        android:max="100"
        android:progress="100"
        android:progressDrawable="@drawable/circle_background_pullup"
        android:layout_alignParentEnd="false"
        android:id="@+id/progressBartest" />

    <ProgressBar
        android:id="@+id/pullUp_progress_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:layout_centerInParent="true"
        android:max="100"
        android:rotation="-90"
        android:progress = "50"
        android:indeterminate="false"
        android:progressDrawable="@drawable/circle_foreground_pullup"
        android:layout_alignParentEnd="false" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/imageView5"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/circlewhite" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pullUp_progress"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:textSize = "60sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="%"
        android:id="@+id/pullup_percentage"
        android:textSize = "30sp"
        android:layout_centerVertical="true"
        android:layout_alignEnd="@+id/imageView5"
        android:layout_toEndOf="@+id/pullUp_progress" />

</RelativeLayout>
